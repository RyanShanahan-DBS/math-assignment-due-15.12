Console.ForegroundColor = ConsoleColor.White;
            Console.WriteLine("* What's the best rice for you? *\n\n");

            double w1, w2, p1, p2, ppk1, ppk2;
            
        //Weight One
        w1again:

            try
            {
                Console.ForegroundColor = ConsoleColor.DarkGreen;
                Console.Write("***");
                Console.ForegroundColor = ConsoleColor.Yellow;
                Console.Write("\nPlease enter the weight, in KG, of the First Package: ");
                w1 = double.Parse(Console.ReadLine());
            }
            catch (Exception ex)
            {
                Console.ForegroundColor = ConsoleColor.Red;
                Console.WriteLine("**");
                Console.WriteLine(ex.Message + "\n\nPlease enter a valid weight.");
                goto w1again;

            }
            //Price One
        p1again:
            try
            {
                Console.ForegroundColor = ConsoleColor.DarkGreen;
                Console.Write("***");
                Console.ForegroundColor = ConsoleColor.Yellow;
                Console.Write("\nPlease enter the price, in Euros, of  the First Package: ");
                p1 = double.Parse(Console.ReadLine());
            }
            catch (Exception ex)
            {
                Console.ForegroundColor = ConsoleColor.Red;
                Console.WriteLine("**");
                Console.WriteLine(ex.Message + "\n\nPlease enter a valid price.");
                goto p1again;

            }         
            //Weight 2
        w2again:
            try
            {
                Console.ForegroundColor = ConsoleColor.DarkMagenta;
                Console.Write("***");
                Console.ForegroundColor = ConsoleColor.Magenta;
                Console.Write("\nPlease enter the weight, in KG, of the Second Package: ");
                w2 = double.Parse(Console.ReadLine());
            }
            catch (Exception ex)
            {
                Console.ForegroundColor = ConsoleColor.Red;
                Console.WriteLine("**");
                Console.WriteLine(ex.Message + "\n\nPlease enter a valid weight.");
                goto w2again;

            }

            //Weight 2
        p2again:
            try
            {
                Console.ForegroundColor = ConsoleColor.DarkMagenta;
                Console.Write("***");
                Console.ForegroundColor = ConsoleColor.Magenta;
                Console.Write("\nPlease enter the price, in Euros, of  the Second Package: ");
                p2 = double.Parse(Console.ReadLine());
            }
            catch (Exception ex)
            {
                Console.ForegroundColor = ConsoleColor.Red;
                Console.WriteLine("**");
                Console.WriteLine(ex.Message + "\n\nPlease enter a valid price.");
                goto p2again;

            }
            //Price per kilo 1
           
            ppk1 = p1 / w1;

            //Price per kilo 2
            ppk2 = p2 / w2;

            Console.BackgroundColor = ConsoleColor.DarkBlue;
            //if package 1 is better value
            if (ppk1 < ppk2)

            {
                Console.Write("\n\nPackage 1 is better value.Package 1 is {0} euro per kilo and package 2 is {1} euro per kilo. ", ppk1, ppk2);
            }

            //if package 2 is better value
            else if (ppk1 >ppk2)

            {
                Console.Write("\n\nPackage 2 is better value.Package 2 is {0} euro per kilo and package 1 is {1} euro per kilo. ", ppk2, ppk1);
            
           
            }
            //if both packets are the same price and weight
            else if (ppk1 == ppk2)

            {
                Console.Write("\n\n Both packets worth the same per kilo.");
            }

            Console.ReadLine();
          
